def main():
    a=open("testing.txt",'w')
    a.close()
    a=open("testing.txt",'a')
    #print a.read()
    #a.close()
    string='abcdefghijklmnopqrstuvwxyz'
    for i in range(26):
        a.write(string[i]*(i+1)+'\n')
    

    a.close()
    a=open("testing.txt",'r')
    print a.read()
    a.close()
    
#main()

